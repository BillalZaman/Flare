<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:elevation="0dp"
    android:background="@color/white"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/layout_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_pProfile_fm"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">
        </de.hdodenhof.circleimageview.CircleImageView>


        <LinearLayout
            android:id="@+id/ly_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/img_pProfile_fm"
            android:layout_toStartOf="@+id/ly_txt2"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/tv_pName_fm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_pMsg_fm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="14dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/tv_msgTime_fm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text"
                android:textSize="12sp"
                android:textColor="@android:color/holo_green_dark"/>

            <TextView
                android:id="@+id/tv_msgCount_fm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_gravity="end"/>

        </LinearLayout>


    </RelativeLayout>

    <!--    <view-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="1dp"-->
    <!--        android:layout_below="@+id/layout_items"-->
    <!--        android:layout_marginBottom="@dimen/margin_average_"/>-->
</RelativeLayout>